<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/WonkataniaStyle"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/wonkatania_image"
        style="@style/wonkataniaImageStyle"
        android:contentDescription="@string/wonkatania_boat" />

    <LinearLayout style="@style/playbackStyle">

        <ImageView
            android:id="@+id/pause"
            style="@style/pauseStyle"
            android:contentDescription="@string/pause_button" />

        <ImageView
            android:id="@+id/stop"
            style="@style/stopStyle"
            android:contentDescription="@string/stop_button" />

        <ImageView
            android:id="@+id/play"
            style="@style/playStyle"
            android:contentDescription="@string/play_button" />

    </LinearLayout>

    <TextView
        android:id="@+id/wonkatania_score"
        style="@style/songTextStyle"
        android:text="@string/original_score_anthony_newley_and_leslie_bricusse" />

    <TextView
        android:id="@+id/wonkatania_artist"
        style="@style/songTextStyle"
        android:text="@string/artists_gene_wilder" />

    <TextView
        android:id="@+id/wonkatania_album"
        style="@style/songTextStyle"
        android:text="@string/album_willy_wonka_the_chocolate_factory_original_soundtrack" />

    <TextView
        android:id="@+id/wonkatania_date"
        style="@style/songTextStyle"
        android:text="@string/released_1971" />

</LinearLayout>
